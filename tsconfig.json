{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true, // Добавьте этот параметр, чтобы генерировать .d.ts файлы
    "declarationDir": "dist/types" // Укажите, куда помещать .d.ts файлы
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
